<div class="container">
    <div class="parent">
        <div class="jumbotron">

            <form action="" class="">
                <div class="col-sm-offset-4">
                    <div class="form-group">
                        <div class="row">
                            <label class="control-label col-sm-4" for="SName">Station Name</label>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="SName" placeholder="Enter Station">
